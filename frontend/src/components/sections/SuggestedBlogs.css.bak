/* SuggestedBlogs.css */

.suggested-blogs-main-container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 20px;
  font-family: 'Inter', 'Segoe UI', 'Roboto', sans-serif;
}

.suggested-blogs-section {
  background: white;
  border-radius: 20px;
  padding: 40px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.suggested-blogs-section:hover {
  transform: translateY(-5px);
  box-shadow: 0 15px 40px rgba(0, 0, 0, 0.12);
}

.suggested-blogs-header {
  text-align: center;
  margin-bottom: 40px;
}

.suggested-blogs-header h3 {
  font-size: 2rem;
  margin: 0 0 15px 0;
  background: var(--gradient-primary);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15px;
}

.suggested-blogs-header p {
  color: #4a5568;
  font-size: 1.1rem;
  margin: 0;
}

.suggested-blogs-container {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 25px;
}

.suggested-blogs-item {
  background: #f7fafc;
  border-radius: 15px;
  padding: 20px;
  transition: all 0.3s ease;
  cursor: pointer;
  border: 2px solid transparent;
}

.suggested-blogs-item:hover {
  background: #edf2f7;
  transform: translateY(-3px);
  border-color: #2d2d2d;
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
}

.suggested-blogs-thumbnail {
  width: 100%;
  height: 160px;
  border-radius: 12px;
  object-fit: cover;
  margin-bottom: 15px;
  background: linear-gradient(135deg, #e2e8f0 0%, #cbd5e0 100%);
  transition: transform 0.3s ease;
}

.suggested-blogs-item:hover .suggested-blogs-thumbnail {
  transform: scale(1.02);
}

.suggested-blogs-title {
  margin: 0 0 10px 0;
  font-size: 1.1rem;
  font-weight: 600;
  color: #2d3748;
  line-height: 1.4;
}

.suggested-blogs-author {
  margin: 0;
  font-size: 0.9rem;
  color: #718096;
  font-weight: 500;
}

.suggested-blogs-meta {
  display: flex;
  align-items: center;
  gap: 10px;
  margin-top: 10px;
  font-size: 0.8rem;
  color: #a0aec0;
}

.suggested-blogs-meta-item {
  display: flex;
  align-items: center;
  gap: 4px;
}

/* Empty State */
.suggested-blogs-empty {
  text-align: center;
  padding: 60px 20px;
  color: #718096;
}

.suggested-blogs-empty-icon {
  font-size: 3rem;
  margin-bottom: 20px;
  color: var(--text-dim);
}

/* Responsive Design */
@media (max-width: 768px) {
  .suggested-blogs-main-container {
    padding: 15px;
  }

  .suggested-blogs-section {
    padding: 30px 20px;
  }

  .suggested-blogs-header h3 {
    font-size: 1.8rem;
    flex-direction: column;
    gap: 10px;
  }

  .suggested-blogs-container {
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
  }
}

@media (max-width: 480px) {
  .suggested-blogs-container {
    grid-template-columns: 1fr;
  }

  .suggested-blogs-header h3 {
    font-size: 1.6rem;
  }
}

/* Animation for page load */
@keyframes suggested-blogs-fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.suggested-blogs-section {
  animation: suggested-blogs-fadeInUp 0.6s ease-out;
}

.suggested-blogs-item {
  animation: suggested-blogs-fadeInUp 0.6s ease-out;
}

.suggested-blogs-item:nth-child(1) { animation-delay: 0.1s; }
.suggested-blogs-item:nth-child(2) { animation-delay: 0.2s; }
.suggested-blogs-item:nth-child(3) { animation-delay: 0.3s; }
.suggested-blogs-item:nth-child(4) { animation-delay: 0.4s; }
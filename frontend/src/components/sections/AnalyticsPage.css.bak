/* AnalyticsPage.css - Tron Theme */
.web-analytics {
  max-width: 1400px;
  margin: 0 auto;
  padding: 2rem;
  background: #000000;
  min-height: 100vh;
  position: relative;
}

/* Tron grid background */
.web-analytics::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: 
    linear-gradient(0deg, rgba(0, 229, 255, 0.02) 1px, transparent 1px),
    linear-gradient(90deg, rgba(0, 229, 255, 0.02) 1px, transparent 1px),
    #000000;
  background-size: 50px 50px, 50px 50px, 100% 100%;
  pointer-events: none;
  z-index: 0;
}

.web-analytics > * {
  position: relative;
  z-index: 1;
}

.analytics-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 2rem;
  padding: 1.5rem;
  background: rgba(0, 10, 20, 0.8);
  border: 1px solid rgba(0, 229, 255, 0.3);
  border-radius: 0;
  box-shadow: 0 0 20px rgba(0, 229, 255, 0.2);
  position: relative;
  overflow: hidden;
}

.analytics-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 1px;
  background: linear-gradient(90deg, transparent, #00E5FF, transparent);
  animation: headerSweep 3s linear infinite;
}

@keyframes headerSweep {
  0% { left: -100%; }
  100% { left: 100%; }
}

.analytics-title h2 {
  margin: 0;
  color: #00E5FF;
  font-size: 1.75rem;
  font-weight: 700;
  display: flex;
  align-items: center;
  gap: 0.75rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  text-shadow: 0 0 10px rgba(0, 229, 255, 0.5);
}

.analytics-title h2 svg {
  color: #00E5FF;
}

.analytics-title p {
  margin: 0.5rem 0 0 0;
  color: rgba(0, 229, 255, 0.7);
  font-size: 1rem;
}

.date-range-selector {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.date-range-select {
  padding: 0.75rem 1rem;
  border: 1px solid rgba(0, 229, 255, 0.3);
  border-radius: 0;
  background: rgba(0, 0, 0, 0.8);
  color: rgba(0, 229, 255, 0.9);
  cursor: pointer;
  font-weight: 500;
  transition: all 0.3s ease;
  min-width: 150px;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.date-range-select:focus {
  outline: none;
  border-color: #00E5FF;
  box-shadow: 0 0 15px rgba(0, 229, 255, 0.3);
}

.date-range-select:hover {
  background: rgba(0, 229, 255, 0.1);
  border-color: #00E5FF;
}

/* Key Metrics */
.analytics-metrics {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 1.5rem;
  margin-bottom: 2rem;
}

.metric-card {
  background: rgba(0, 10, 20, 0.8);
  padding: 1.5rem;
  border: 1px solid rgba(0, 229, 255, 0.3);
  border-radius: 0;
  box-shadow: 0 0 15px rgba(0, 229, 255, 0.2);
  display: flex;
  align-items: center;
  gap: 1rem;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.metric-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(0, 229, 255, 0.1), transparent);
  transition: left 0.5s;
}

.metric-card:hover::before {
  left: 100%;
}

.metric-card:hover {
  transform: translateY(-4px);
  border-color: #00E5FF;
  box-shadow: 0 0 25px rgba(0, 229, 255, 0.4);
}

.metric-icon {
  width: 60px;
  height: 60px;
  border-radius: 0;
  background: rgba(0, 229, 255, 0.1);
  border: 2px solid #00E5FF;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #00E5FF;
  font-size: 1.5rem;
  flex-shrink: 0;
  box-shadow: 0 0 15px rgba(0, 229, 255, 0.3);
}

.metric-content {
  flex: 1;
}

.metric-value {
  font-size: 2rem;
  font-weight: 700;
  color: #00E5FF;
  margin-bottom: 0.25rem;
  text-shadow: 0 0 10px rgba(0, 229, 255, 0.3);
}

.metric-label {
  color: rgba(0, 229, 255, 0.7);
  font-weight: 500;
  font-size: 0.875rem;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  margin-bottom: 0.5rem;
}

.metric-trend {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-size: 0.875rem;
  font-weight: 600;
}

.trend-up {
  color: #00E5FF;
}

.trend-down {
  color: #FF0080;
}

.trend-neutral {
  color: rgba(0, 229, 255, 0.5);
}

.metric-trend span {
  color: inherit;
}

/* Analytics Content */
.analytics-content {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 2rem;
  margin-bottom: 2rem;
}

.analytics-section {
  background: rgba(0, 10, 20, 0.8);
  padding: 1.5rem;
  border: 1px solid rgba(0, 229, 255, 0.3);
  border-radius: 0;
  box-shadow: 0 0 15px rgba(0, 229, 255, 0.2);
  position: relative;
  overflow: hidden;
}

.analytics-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 1px;
  background: linear-gradient(90deg, transparent, #00E5FF, transparent);
  animation: sectionSweep 4s linear infinite;
}

@keyframes sectionSweep {
  0% { left: -100%; }
  100% { left: 100%; }
}

.analytics-section.full-width {
  grid-column: 1 / -1;
  overflow-x: auto;
}

.analytics-section h3 {
  margin: 0 0 1.5rem 0;
  color: #00E5FF;
  font-size: 1.25rem;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 0.5rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  text-shadow: 0 0 10px rgba(0, 229, 255, 0.3);
}

.analytics-section h3 svg {
  color: #00E5FF;
}

/* Top Pages */
.top-pages-list {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.page-item {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 1rem;
  background: rgba(0, 0, 0, 0.6);
  border: 1px solid rgba(0, 229, 255, 0.2);
  border-radius: 0;
  transition: all 0.3s ease;
}

.page-item:hover {
  background: rgba(0, 229, 255, 0.05);
  border-color: #00E5FF;
  box-shadow: 0 0 15px rgba(0, 229, 255, 0.2);
}

.page-rank {
  width: 32px;
  height: 32px;
  border-radius: 0;
  background: rgba(0, 229, 255, 0.2);
  border: 1px solid #00E5FF;
  color: #00E5FF;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  font-size: 0.875rem;
  flex-shrink: 0;
  box-shadow: 0 0 10px rgba(0, 229, 255, 0.3);
}

.page-info {
  flex: 1;
}

.page-title {
  font-weight: 600;
  color: #00E5FF;
  margin-bottom: 0.25rem;
}

.page-path {
  color: rgba(0, 229, 255, 0.6);
  font-size: 0.875rem;
  font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
}

.page-views {
  text-align: right;
  flex-shrink: 0;
}

.views-count {
  font-weight: 700;
  color: #00E5FF;
  font-size: 1.125rem;
  text-shadow: 0 0 10px rgba(0, 229, 255, 0.3);
}

.views-label {
  color: rgba(0, 229, 255, 0.6);
  font-size: 0.75rem;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

/* Traffic Sources */
.traffic-sources {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.source-item {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 1rem;
  background: rgba(0, 0, 0, 0.6);
  border: 1px solid rgba(0, 229, 255, 0.2);
  border-radius: 0;
  transition: all 0.3s ease;
}

.source-item:hover {
  background: rgba(0, 229, 255, 0.05);
  border-color: #00E5FF;
}

.source-info {
  flex: 1;
}

.source-name {
  font-weight: 600;
  color: #00E5FF;
  margin-bottom: 0.25rem;
}

.source-visitors {
  color: rgba(0, 229, 255, 0.6);
  font-size: 0.875rem;
}

.source-percentage {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  min-width: 120px;
}

.percentage-bar {
  flex: 1;
  height: 8px;
  background: rgba(0, 0, 0, 0.8);
  border: 1px solid rgba(0, 229, 255, 0.3);
  border-radius: 0;
  overflow: hidden;
}

.percentage-fill {
  height: 100%;
  background: linear-gradient(90deg, #00E5FF, rgba(0, 229, 255, 0.5));
  border-radius: 0;
  transition: width 0.3s ease;
  box-shadow: 0 0 10px rgba(0, 229, 255, 0.5);
}

.percentage-text {
  font-weight: 600;
  color: #00E5FF;
  font-size: 0.875rem;
  min-width: 40px;
  text-align: right;
}

/* Daily Stats Chart */
.daily-stats-chart {
  padding: 1rem 0;
  width: 100%;
  overflow: hidden;
}

.chart-container {
  display: flex;
  align-items: end;
  gap: 0.5rem;
  height: 200px;
  margin-bottom: 1rem;
  padding: 0 1rem;
  overflow-x: auto;
  overflow-y: hidden;
  width: 100%;
  box-sizing: border-box;
}

.chart-container::-webkit-scrollbar {
  height: 6px;
}

.chart-container::-webkit-scrollbar-track {
  background: rgba(0, 0, 0, 0.8);
  border: 1px solid rgba(0, 229, 255, 0.2);
  border-radius: 0;
}

.chart-container::-webkit-scrollbar-thumb {
  background: rgba(0, 229, 255, 0.5);
  border-radius: 0;
  border: 1px solid #00E5FF;
}

.chart-container::-webkit-scrollbar-thumb:hover {
  background: #00E5FF;
  box-shadow: 0 0 10px rgba(0, 229, 255, 0.5);
}

.chart-bar {
  flex: 0 0 auto;
  width: 40px;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.5rem;
}

.bar-container {
  height: 160px;
  width: 100%;
  display: flex;
  align-items: end;
  justify-content: center;
}

.bar-fill {
  width: 80%;
  background: linear-gradient(180deg, #00E5FF, rgba(0, 229, 255, 0.3));
  border-radius: 0;
  min-height: 4px;
  transition: all 0.3s ease;
  cursor: pointer;
  box-shadow: 0 0 10px rgba(0, 229, 255, 0.5);
  border: 1px solid #00E5FF;
}

.bar-fill:hover {
  opacity: 1;
  transform: scaleY(1.05);
  box-shadow: 0 0 20px rgba(0, 229, 255, 0.8);
}

.bar-label {
  font-size: 0.75rem;
  color: rgba(0, 229, 255, 0.7);
  font-weight: 500;
  text-align: center;
}

.chart-legend {
  display: flex;
  justify-content: center;
  gap: 1rem;
  padding-top: 1rem;
  border-top: 1px solid rgba(0, 229, 255, 0.2);
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-size: 0.875rem;
  color: rgba(0, 229, 255, 0.7);
}

.legend-color {
  width: 12px;
  height: 12px;
  border-radius: 0;
  border: 1px solid #00E5FF;
}

.legend-color.views {
  background: linear-gradient(180deg, #00E5FF, rgba(0, 229, 255, 0.3));
  box-shadow: 0 0 10px rgba(0, 229, 255, 0.5);
}

/* Loading and Error States */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 50vh;
  color: rgba(0, 229, 255, 0.7);
}

.loading-spinner {
  width: 40px;
  height: 40px;
  border: 4px solid rgba(0, 229, 255, 0.2);
  border-top: 4px solid #00E5FF;
  border-radius: 0;
  animation: spin 1s linear infinite;
  margin-bottom: 1rem;
  box-shadow: 0 0 20px rgba(0, 229, 255, 0.3);
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 50vh;
  text-align: center;
  color: rgba(0, 229, 255, 0.7);
}

.error-container h3 {
  color: #FF0080;
  margin-bottom: 1rem;
  text-shadow: 0 0 10px rgba(255, 0, 128, 0.5);
}

.error-container p {
  margin-bottom: 1.5rem;
  color: rgba(0, 229, 255, 0.8);
}

/* Empty State Styles */
.analytics-section .empty-state {
  text-align: center;
  padding: 3rem 1rem;
  color: rgba(0, 229, 255, 0.6);
}

.analytics-section .empty-state p {
  font-size: 1rem;
  margin-bottom: 0.5rem;
  color: rgba(0, 229, 255, 0.8);
}

.analytics-section .empty-state small {
  font-size: 0.875rem;
  color: rgba(0, 229, 255, 0.5);
}

.btn-primary {
  background: rgba(0, 229, 255, 0.2);
  color: #00E5FF;
  border: 1px solid #00E5FF;
  padding: 0.75rem 1.5rem;
  border-radius: 0;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  box-shadow: 0 0 15px rgba(0, 229, 255, 0.3);
}

.btn-primary:hover {
  transform: translateY(-2px);
  background: rgba(0, 229, 255, 0.3);
  box-shadow: 0 0 25px rgba(0, 229, 255, 0.5);
}

/* Responsive Design */
@media (max-width: 768px) {
  .web-analytics {
    padding: 1rem;
  }

  .analytics-header {
    flex-direction: column;
    gap: 1rem;
    text-align: center;
  }

  .analytics-metrics {
    grid-template-columns: 1fr;
  }

  .analytics-content {
    grid-template-columns: 1fr;
  }

  .metric-card {
    flex-direction: column;
    text-align: center;
  }

  .metric-icon {
    width: 50px;
    height: 50px;
    font-size: 1.25rem;
  }

  .metric-value {
    font-size: 1.75rem;
  }

  .page-item {
    flex-direction: column;
    text-align: center;
    gap: 0.75rem;
  }

  .page-views {
    text-align: center;
  }

  .source-item {
    flex-direction: column;
    gap: 0.75rem;
  }

  .source-percentage {
    width: 100%;
    min-width: auto;
  }

  .chart-container {
    height: 150px;
    padding: 0 0.5rem;
  }

  .chart-bar {
    width: 30px;
  }

  .bar-container {
    height: 120px;
  }
}

@media (max-width: 480px) {
  .analytics-title h2 {
    font-size: 1.5rem;
  }

  .metric-value {
    font-size: 1.5rem;
  }

  .chart-container {
    gap: 0.25rem;
  }

  .chart-bar {
    width: 25px;
  }

  .bar-fill {
    width: 90%;
  }
}

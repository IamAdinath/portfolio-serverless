/* ResumeDownloadButton.css - Tron Theme */

.floating-download-btn {
  position: fixed;
  bottom: 30px;
  left: 30px;
  padding: 15px 25px;
  background: rgba(0, 0, 0, 0.9);
  color: #00E5FF;
  border: 2px solid #00E5FF;
  border-radius: 0;
  font-weight: 600;
  font-size: 1rem;
  cursor: pointer;
  box-shadow: 0 0 15px rgba(0, 229, 255, 0.3);
  z-index: 999999 !important; /* Ensure it's above everything */
  transition: all 0.3s ease;
  animation: bounce 2s infinite;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  overflow: hidden;
  display: flex;
  align-items: center;
  gap: 10px;
  pointer-events: auto; /* Ensure it's clickable */
}

.floating-download-btn::after {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(0, 229, 255, 0.3), transparent);
  transition: left 0.5s;
}

.floating-download-btn:hover::after {
  left: 100%;
}

.floating-download-btn:hover {
  background: rgba(0, 229, 255, 0.1);
  transform: translateY(-3px) scale(1.05);
  box-shadow: 0 0 25px rgba(0, 229, 255, 0.5);
  border-color: #00E5FF;
  animation: none;
}

.floating-download-btn:active {
  transform: translateY(-1px) scale(1.02);
  box-shadow: 0 0 20px rgba(0, 229, 255, 0.4);
}

.floating-download-btn:disabled {
  background: rgba(0, 0, 0, 0.6);
  border-color: rgba(0, 229, 255, 0.3);
  color: rgba(0, 229, 255, 0.5);
  cursor: not-allowed;
  animation: pulse 2s infinite;
  transform: none;
}

.floating-download-btn:disabled:hover {
  transform: none;
  box-shadow: 0 0 15px rgba(0, 229, 255, 0.2);
  border-color: rgba(0, 229, 255, 0.3);
}

/* Bouncy animation */
@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-8px);
  }
  60% {
    transform: translateY(-4px);
  }
}

/* Pulse animation for loading state */
@keyframes pulse {
  0% {
    opacity: 1;
  }
  50% {
    opacity: 0.6;
  }
  100% {
    opacity: 1;
  }
}

/* Tron glow effect */
.floating-download-btn::before {
  content: '';
  position: absolute;
  top: -2px;
  left: -2px;
  right: -2px;
  bottom: -2px;
  background: linear-gradient(135deg, rgba(0, 229, 255, 0.2) 0%, rgba(0, 229, 255, 0.1) 100%);
  border-radius: 0;
  z-index: -1;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.floating-download-btn:hover::before {
  opacity: 1;
}

.stickman-wrapper {
  position: fixed;
  bottom: 80px;
  left: 0;
  display: flex;
  align-items: center;
  z-index: 999;
}

.stickman {
  font-size: 2rem;
  filter: drop-shadow(0 0 5px rgba(0, 229, 255, 0.5));
}

.rope {
  width: 80px;
  height: 2px;
  background: linear-gradient(90deg, transparent, #00E5FF, transparent);
  margin: 0 10px;
  box-shadow: 0 0 5px rgba(0, 229, 255, 0.5);
}

.file-icon {
  font-size: 1.8rem;
  color: #00E5FF;
  filter: drop-shadow(0 0 5px rgba(0, 229, 255, 0.5));
}

/* Responsive Design */
@media (max-width: 768px) {
  .floating-download-btn {
    bottom: 20px;
    left: 20px;
    padding: 12px 20px;
    font-size: 0.9rem;
  }
}

@media (max-width: 480px) {
  .floating-download-btn {
    bottom: 15px;
    left: 15px;
    padding: 10px 16px;
    font-size: 0.85rem;
    gap: 8px;
  }
}

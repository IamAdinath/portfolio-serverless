/* FloatingButton.css - Isolated z-index component */

/* Create a new stacking context at the root level */
.floating-button-portal {
  position: fixed;
  top: 0;
  left: 0;
  width: 0;
  height: 0;
  z-index: 2147483647; /* Maximum z-index value */
  pointer-events: none;
}

.floating-button-container {
  position: fixed !important;
  bottom: 30px !important;
  left: 30px !important;
  z-index: 2147483647 !important;
  pointer-events: auto !important;
}

.floating-download-btn {
  padding: 15px 25px;
  background: rgba(0, 0, 0, 0.9);
  color: #00E5FF;
  border: 2px solid #00E5FF;
  border-radius: 0;
  font-weight: 600;
  font-size: 1rem;
  cursor: pointer;
  box-shadow: 0 0 15px rgba(0, 229, 255, 0.3);
  transition: all 0.3s ease;
  animation: bounce 2s infinite;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  overflow: hidden;
  display: flex;
  align-items: center;
  gap: 10px;
  position: relative;
}

.floating-download-btn::after {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(0, 229, 255, 0.3), transparent);
  transition: left 0.5s;
}

.floating-download-btn:hover::after {
  left: 100%;
}

.floating-download-btn:hover {
  background: rgba(0, 229, 255, 0.1);
  transform: translateY(-3px) scale(1.05);
  box-shadow: 0 0 25px rgba(0, 229, 255, 0.5);
  border-color: #00E5FF;
  animation: none;
}

.floating-download-btn:active {
  transform: translateY(-1px) scale(1.02);
  box-shadow: 0 0 20px rgba(0, 229, 255, 0.4);
}

.floating-download-btn:disabled {
  background: rgba(0, 0, 0, 0.6);
  border-color: rgba(0, 229, 255, 0.3);
  color: rgba(0, 229, 255, 0.5);
  cursor: not-allowed;
  animation: pulse 2s infinite;
  transform: none;
}

.floating-download-btn:disabled:hover {
  transform: none;
  box-shadow: 0 0 15px rgba(0, 229, 255, 0.2);
  border-color: rgba(0, 229, 255, 0.3);
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-8px);
  }
  60% {
    transform: translateY(-4px);
  }
}

@keyframes pulse {
  0% {
    opacity: 1;
  }
  50% {
    opacity: 0.6;
  }
  100% {
    opacity: 1;
  }
}

.floating-download-btn::before {
  content: '';
  position: absolute;
  top: -2px;
  left: -2px;
  right: -2px;
  bottom: -2px;
  background: linear-gradient(135deg, rgba(0, 229, 255, 0.2) 0%, rgba(0, 229, 255, 0.1) 100%);
  border-radius: 0;
  z-index: -1;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.floating-download-btn:hover::before {
  opacity: 1;
}

@media (max-width: 768px) {
  .floating-button-container {
    bottom: 20px !important;
    left: 20px !important;
  }
  
  .floating-download-btn {
    padding: 12px 20px;
    font-size: 0.9rem;
  }
}

@media (max-width: 480px) {
  .floating-button-container {
    bottom: 15px !important;
    left: 15px !important;
  }
  
  .floating-download-btn {
    padding: 10px 16px;
    font-size: 0.85rem;
    gap: 8px;
  }
}

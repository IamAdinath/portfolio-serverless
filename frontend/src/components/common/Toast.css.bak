/* src/components/common/Toast.css - Tron Theme */

.toast-container {
  position: fixed;
  top: 1.5rem;
  right: 1.5rem;
  z-index: 999999;
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
  width: calc(100% - 3rem);
  max-width: 380px;
  pointer-events: none;
}

.toast-message {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 1rem 1.25rem;
  border-radius: 0;
  color: #00E5FF;
  background: rgba(0, 10, 20, 0.95);
  border: 1px solid;
  box-shadow: 0 0 20px;
  animation: toast-enter 0.4s cubic-bezier(0.21, 1.02, 0.73, 1) forwards,
             toast-glow 2s ease-in-out infinite;
  will-change: transform, opacity;
  position: relative;
  overflow: hidden;
  pointer-events: auto;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  font-weight: 600;
}

/* Running neon line effect */
.toast-message::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 1px;
  background: linear-gradient(90deg, transparent, currentColor, transparent);
  animation: neonSweep 2s linear infinite;
}

.toast-message::after {
  content: '';
  position: absolute;
  bottom: 0;
  right: -100%;
  width: 100%;
  height: 1px;
  background: linear-gradient(90deg, transparent, currentColor, transparent);
  animation: neonSweep 2s linear infinite;
  animation-delay: 1s;
}

@keyframes neonSweep {
  0% { left: -100%; }
  100% { left: 100%; }
}

@keyframes toast-glow {
  0%, 100% { 
    box-shadow: 0 0 20px currentColor;
  }
  50% { 
    box-shadow: 0 0 30px currentColor, 0 0 40px currentColor;
  }
}

.toast-icon {
  font-size: 1.25rem;
  flex-shrink: 0;
  filter: drop-shadow(0 0 5px currentColor);
}

.toast-text {
  flex-grow: 1;
  font-size: 0.875rem;
  line-height: 1.4;
  margin: 0;
  text-shadow: 0 0 10px currentColor;
}

.toast-close-button {
  background: none;
  border: 1px solid currentColor;
  border-radius: 0;
  color: inherit;
  opacity: 0.8;
  cursor: pointer;
  padding: 0.25rem 0.5rem;
  transition: all 0.2s ease;
  flex-shrink: 0;
  font-size: 0.875rem;
}

.toast-close-button:hover {
  opacity: 1;
  background: rgba(0, 229, 255, 0.1);
  box-shadow: 0 0 10px currentColor;
  transform: scale(1.05);
}

/* Success Toast - Cyan */
.toast-success { 
  border-color: #00E5FF;
  color: #00E5FF;
}

/* Error Toast - Pink/Magenta */
.toast-error { 
  border-color: #FF0080;
  color: #FF0080;
}

/* Info Toast - Cyan (same as success) */
.toast-info { 
  border-color: #00E5FF;
  color: #00E5FF;
}

/* Warning Toast - Orange/Yellow */
.toast-warning { 
  border-color: #FFB800;
  color: #FFB800;
}

@keyframes toast-enter {
  from {
    opacity: 0;
    transform: translateX(100%) scale(0.8);
  }
  to {
    opacity: 1;
    transform: translateX(0) scale(1);
  }
}

/* Glitch effect on enter */
@keyframes toast-glitch {
  0%, 100% { transform: translateX(0); }
  20% { transform: translateX(-2px); }
  40% { transform: translateX(2px); }
  60% { transform: translateX(-1px); }
  80% { transform: translateX(1px); }
}

.toast-message {
  animation: toast-enter 0.4s cubic-bezier(0.21, 1.02, 0.73, 1) forwards,
             toast-glitch 0.3s ease-in-out 0.4s,
             toast-glow 2s ease-in-out infinite 0.7s;
}

/* Mobile Responsive */
@media (max-width: 768px) {
  .toast-container {
    top: 1rem;
    right: 1rem;
    width: calc(100% - 2rem);
    max-width: 100%;
  }

  .toast-message {
    padding: 0.875rem 1rem;
  }

  .toast-text {
    font-size: 0.8125rem;
  }

  .toast-icon {
    font-size: 1.125rem;
  }
}

@media (max-width: 480px) {
  .toast-container {
    top: 0.75rem;
    right: 0.75rem;
    left: 0.75rem;
    width: auto;
  }

  .toast-message {
    padding: 0.75rem 0.875rem;
  }
}
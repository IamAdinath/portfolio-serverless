/* Responsive Sync CSS - Unified Desktop/Mobile Experience */
/* This file ensures consistent rendering across all devices */

/* Standardized Breakpoints */
:root {
  --breakpoint-xs: 320px;   /* Extra small phones */
  --breakpoint-sm: 480px;   /* Small phones */
  --breakpoint-md: 768px;   /* Tablets */
  --breakpoint-lg: 1024px;  /* Small laptops */
  --breakpoint-xl: 1200px;  /* Desktops */
  --breakpoint-xxl: 1400px; /* Large desktops */
}

/* Base responsive container */
.responsive-container {
  width: 100%;
  max-width: var(--breakpoint-xxl);
  margin: 0 auto;
  padding: 0 20px;
}

/* Unified Typography Scale */
.responsive-h1 {
  font-size: clamp(2rem, 4vw, 3.5rem);
  line-height: 1.1;
  margin-bottom: clamp(1rem, 2vw, 1.5rem);
}

.responsive-h2 {
  font-size: clamp(1.25rem, 3vw, 1.5rem);
  line-height: 1.2;
  margin-bottom: clamp(0.75rem, 1.5vw, 1rem);
}

.responsive-h3 {
  font-size: clamp(1.125rem, 2.5vw, 1.8rem);
  line-height: 1.3;
  margin-bottom: clamp(0.5rem, 1vw, 0.75rem);
}

.responsive-text {
  font-size: clamp(0.9rem, 2vw, 1.1rem);
  line-height: 1.6;
}

/* Unified Grid System */
.responsive-grid {
  display: grid;
  gap: clamp(1rem, 3vw, 2rem);
}

.responsive-grid-2 {
  grid-template-columns: repeat(auto-fit, minmax(min(100%, 300px), 1fr));
}

.responsive-grid-3 {
  grid-template-columns: repeat(auto-fit, minmax(min(100%, 250px), 1fr));
}

.responsive-grid-4 {
  grid-template-columns: repeat(auto-fit, minmax(min(100%, 200px), 1fr));
}

/* Unified Spacing System */
.responsive-section {
  padding: clamp(2rem, 5vw, 4rem) clamp(1rem, 3vw, 2rem);
}

.responsive-card {
  padding: clamp(1.5rem, 4vw, 2.5rem);
  margin-bottom: clamp(1rem, 3vw, 2rem);
}

/* Unified Button System */
.responsive-btn {
  padding: clamp(0.75rem, 2vw, 1rem) clamp(1.5rem, 4vw, 2rem);
  font-size: clamp(0.9rem, 2vw, 1rem);
  min-height: 44px; /* Touch target minimum */
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: clamp(0.5rem, 1vw, 0.75rem);
}

/* Unified Icon System */
.responsive-icon {
  font-size: clamp(1rem, 2.5vw, 1.5rem);
  width: clamp(1rem, 2.5vw, 1.5rem);
  height: clamp(1rem, 2.5vw, 1.5rem);
}

.responsive-icon-large {
  font-size: clamp(1.5rem, 4vw, 2.5rem);
  width: clamp(1.5rem, 4vw, 2.5rem);
  height: clamp(1.5rem, 4vw, 2.5rem);
}

/* Unified Social Icons */
.responsive-social-icon {
  width: clamp(40px, 8vw, 60px);
  height: clamp(40px, 8vw, 60px);
  min-width: 44px; /* Touch target minimum */
  min-height: 44px;
  font-size: clamp(1.2rem, 3vw, 1.5rem);
}

/* Unified Profile/Logo Sizing */
.responsive-profile {
  width: clamp(150px, 30vw, 250px);
  height: clamp(150px, 30vw, 250px);
  max-width: 250px;
  max-height: 250px;
}

.responsive-logo {
  width: clamp(32px, 6vw, 42px);
  height: clamp(32px, 6vw, 42px);
  min-width: 32px;
  min-height: 32px;
}

/* Unified Header Height */
.responsive-header {
  height: clamp(60px, 10vw, 70px);
  min-height: 60px;
}

/* Unified Navigation */
.responsive-nav-link {
  padding: clamp(0.5rem, 2vw, 0.75rem) clamp(0.75rem, 3vw, 1rem);
  font-size: clamp(0.85rem, 2vw, 0.95rem);
  min-height: 44px; /* Touch target */
}

/* Unified Card Sizing */
.responsive-skill-card,
.responsive-blog-card,
.responsive-testimonial-card {
  min-height: clamp(200px, 25vw, 300px);
  padding: clamp(1.5rem, 4vw, 2.5rem);
}

/* Unified Stats Display */
.responsive-stat-number {
  font-size: clamp(1.5rem, 4vw, 2rem);
}

.responsive-stat-label {
  font-size: clamp(0.8rem, 2vw, 0.9rem);
}

/* Mobile-First Responsive Utilities */
.mobile-only {
  display: block;
}

.desktop-only {
  display: none;
}

@media (min-width: 768px) {
  .mobile-only {
    display: none;
  }
  
  .desktop-only {
    display: block;
  }
}

/* Responsive Flex Utilities */
.responsive-flex {
  display: flex;
  flex-wrap: wrap;
  gap: clamp(1rem, 3vw, 2rem);
  align-items: center;
}

.responsive-flex-center {
  justify-content: center;
}

.responsive-flex-between {
  justify-content: space-between;
}

.responsive-flex-column {
  flex-direction: column;
}

@media (max-width: 768px) {
  .responsive-flex-column-mobile {
    flex-direction: column;
    text-align: center;
  }
}

/* Responsive Text Alignment */
.responsive-text-center {
  text-align: center;
}

@media (min-width: 768px) {
  .responsive-text-left-desktop {
    text-align: left;
  }
}

/* Unified Animation Performance */
.responsive-animation {
  will-change: transform, opacity;
  transform: translateZ(0);
}

.responsive-hover {
  transition: all 0.3s ease;
}

.responsive-hover:hover {
  transform: translateY(-2px);
}

/* Responsive Image Optimization */
.responsive-image {
  width: 100%;
  height: auto;
  max-width: 100%;
  object-fit: cover;
}

/* Unified Focus States */
.responsive-focus:focus {
  outline: 2px solid rgba(0, 229, 255, 0.5);
  outline-offset: 2px;
}

/* Responsive Loading States */
.responsive-loading {
  min-height: clamp(200px, 30vh, 400px);
  display: flex;
  align-items: center;
  justify-content: center;
}

/* Unified Border Radius (Tron theme = 0) */
.responsive-border {
  border-radius: 0;
  border: 1px solid rgba(0, 229, 255, 0.3);
}

.responsive-border-accent {
  border: 1px solid #00E5FF;
}

/* Responsive Shadow System */
.responsive-shadow {
  box-shadow: 0 0 clamp(10px, 2vw, 20px) rgba(0, 229, 255, 0.2);
}

.responsive-shadow-hover:hover {
  box-shadow: 0 0 clamp(15px, 3vw, 30px) rgba(0, 229, 255, 0.3);
}

/* Unified Background System */
.responsive-bg-primary {
  background: rgba(0, 10, 20, 0.8);
}

.responsive-bg-secondary {
  background: rgba(0, 0, 0, 0.9);
}

.responsive-bg-card {
  background: rgba(0, 0, 0, 0.9);
}

/* Responsive Overflow Handling */
.responsive-overflow {
  overflow-x: hidden;
  overflow-y: auto;
}

/* Unified Color System */
.responsive-text-primary {
  color: #00E5FF;
}

.responsive-text-secondary {
  color: rgba(0, 229, 255, 0.9);
}

.responsive-text-muted {
  color: rgba(0, 229, 255, 0.6);
}

.responsive-text-white {
  color: #FFFFFF;
}

/* Performance Optimizations */
.responsive-performance {
  contain: layout style paint;
  will-change: auto;
}

.responsive-performance-animation {
  will-change: transform, opacity;
  transform: translateZ(0);
}

/* Responsive Accessibility */
.responsive-sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border: 0;
}

/* Touch Target Optimization */
.responsive-touch-target {
  min-width: 44px;
  min-height: 44px;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

/* Responsive Print Styles */
@media print {
  .responsive-no-print {
    display: none !important;
  }
  
  .responsive-print-only {
    display: block !important;
  }
}

/* High DPI Display Optimization */
@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
  .responsive-high-dpi {
    image-rendering: -webkit-optimize-contrast;
    image-rendering: crisp-edges;
  }
}

/* Reduced Motion Support */
@media (prefers-reduced-motion: reduce) {
  .responsive-animation,
  .responsive-hover {
    animation: none !important;
    transition: none !important;
  }
}

/* Dark Mode Support (already dark theme) */
@media (prefers-color-scheme: light) {
  /* Keep dark theme even in light mode preference */
  .responsive-force-dark {
    background: #000000 !important;
    color: #00E5FF !important;
  }
}

/* Landscape/Portrait Optimization */
@media (orientation: landscape) and (max-height: 500px) {
  .responsive-landscape-compact {
    padding: clamp(0.5rem, 2vw, 1rem);
  }
}

/* Ultra-wide Screen Support */
@media (min-width: 1600px) {
  .responsive-ultra-wide {
    max-width: 1400px;
    margin: 0 auto;
  }
}
  "scripts": {
    "start": "react-scripts start",
    "build": "npm run sitemap:generate && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "sitemap:generate": "node scripts/generate-sitemap.js",
    "sitemap:validate": "node -e \"const fs=require('fs'); const xml=fs.readFileSync('public/sitemap.xml','utf8'); console.log(xml.includes('<?xml') && xml.includes('<urlset') ? '✅ Sitemap is valid' : '❌ Sitemap is invalid');\"",
    "seo:test": "node scripts/seo-test.js",
    "seo:validate": "npm run build && npm run seo:test",
    "lighthouse": "lhci autorun",
    "serve": "npx serve -s build -l 3000"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
